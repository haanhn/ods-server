<%- include('../includes/head.ejs') %>
<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Thể loại</h1>

  <div class="row mt-5">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <form action="/admin/categories/create" method="POST">
          <div class="card-body">
            <h4 class="card-title">Thêm thể loại</h4>
            <div class="form-group row">
              <label for="categoryTitle" class="col-sm-3 text-right control-label col-form-label">Tên thể loại</label>
              <div class="col-sm-6">
                <input type="text" class="form-control" id="categoryTitle" name="categoryTitle" />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-3 text-right">Trạng thái</label>
              <div class="col-sm-9">
                <div class="custom-control custom-checkbox mr-sm-2">
                  <input type="checkbox" class="custom-control-input" id="status" name="status" />
                  <label class="custom-control-label" for="status"></label>
                </div>
              </div>
            </div>
          </div>
          <div class="border-top">
            <div class="card-body">
              <button type="submit" class="btn btn-primary">
                Thêm
              </button>
              <a href="/admin/categories" class="btn btn-secondary">Hủy</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- /.container-fluid -->
<%- include('../includes/end.ejs') %>