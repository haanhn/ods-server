<%- include('../includes/head.ejs') %>



<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Campaigns</h1>

  <select class="custom-select" id="selection" onchange="location = this.value" style="width: 100px;">
    <%
    var options = ["All", "setting", "waiting", "public", "close", "block"];
    for ( var i = 0; i < options.length; i++ )
    {
      if (options[i] != 'All') {
        var selected = ( status == options[i] ) ? "selected" : "";
        %><option value="<%='https://odsapi.herokuapp.com/admin/campaigns/' + options[ i ] %>" <%=selected %>>
      <%=options[i] %>
    </option><%
      } else { %>
    <option value="https://odsapi.herokuapp.com/admin/campaigns/" selected>All</option>
    <% }
        
    }
    %>


  </select>

  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-5">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Campaigns</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th class="text-center">Title</th>
              <th class="text-center">Host Name</th>
              <th class="text-center">Category</th>
              <th class="text-center">Status</th>
              <th class="text-center text-danger"><i class="fa fa-bolt"></th>
            </tr>
          </thead>
          <tbody>
            <% for (let campaign of campaigns) { %>
            <tr>
              <td class="text-center"><%= campaign.campaignTitle %></td>
              <td class="text-center"><%= campaign.Users[0].fullname %></td>
              <td class="text-center"><%= campaign.Category.categoryTitle %></td>
              <td class="text-center">
                <% if(campaign.campaignStatus === 'setting'){%>
                <span class="badge badge-secondary"><%= campaign.campaignStatus %></span>
                <% } else if(campaign.campaignStatus === 'waiting'){ %>
                <span class="badge badge-warning"><%= campaign.campaignStatus %></span>
                <% } else if(campaign.campaignStatus === 'block'){ %>
                <span class="badge badge-danger"><%= campaign.campaignStatus %></span>
                <% } else if(campaign.campaignStatus === 'public'){ %>
                <span class="badge badge-success"><%= campaign.campaignStatus %></span>
                <% } else if(campaign.campaignStatus === 'close'){ %>
                <span class="badge badge-success"><%= campaign.campaignStatus %></span>
                <% } %>
              </td>
              <td class="text-center">
                <div class="btn-group" role="group">
                  <a href="/admin/campaigns/details/<%= campaign.campaignSlug %>" class="btn btn-sm btn-primary"
                    title="View list campaign"><i class="fas fa-eye"></i></a>
                </div>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->

<!-- Footer -->
<footer class="sticky-footer bg-white">
  <div class="container my-auto">
    <div class="copyright text-center my-auto">
      <span>Copyright &copy; Your Website 2019</span>
    </div>
  </div>
</footer>
<!-- End of Footer -->

</div>
<!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

