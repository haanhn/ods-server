<%- include('../includes/head.ejs') %> 
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Campaigns</h1>
        <a href="/admin/campaigns/create" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Add Campaigns</span>
        </a>

        <!-- DataTales Example -->
        <div class="card shadow mb-4 mt-5">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Campaigns</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Title</th>
                            <th class="text-center">Slug</th>
                            <th class="text-center">Goal</th>
                            <th class="text-center">End Date</th>
                            <th class="text-center">Thumbnail</th>
                            <th class="text-center">Rating Point</th>
                            <th class="text-center">Short Description</th>
                            <th class="text-center">Description</th>
                            <th class="text-center">Address</th>
                            <th class="text-center">Region</th>
                            <th class="text-center">Status</th>
                            <th class="text-center text-danger"><i class="fa fa-bolt"></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Title</th>
                            <th class="text-center">Slug</th>
                            <th class="text-center">Goal</th>
                            <th class="text-center">End Date</th>
                            <th class="text-center">Thumbnail</th>
                            <th class="text-center">Rating Point</th>
                            <th class="text-center">Short Description</th>
                            <th class="text-center">Description</th>
                            <th class="text-center">Address</th>
                            <th class="text-center">Region</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <% for (let campaign of campaigns) { %> 
                            <tr>
                                <td class="text-center"><%= campaign.id %></td>
                                <td class="text-center"><%= campaign.campaignTitle %></td>
                                <td class="text-center"><%= campaign.campaignSlug %></td>
                                <td class="text-center"><%= campaign.campaignGoal %></td>
                                <td class="text-center"><%= campaign.campaignEndDate %></td>
                                <td class="text-center"><%= campaign.campaignRatingPoint %></td>
                                <td class="text-center"><%= campaign.campaignShortDescription %></td>
                                <td class="text-center"><%= campaign.campaignDescription %></td>
                                <td class="text-center"><%= campaign.campainAddress %></td>
                                <td class="text-center"><%= campaign.campainRegion %></td>
                                <td class="text-center"><%= campaign.campainStatus %></td>
                                
                            </tr>
                        <% }  %> 
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
        
    </div>
    <!-- /.container-fluid -->
    <%- include('../includes/end.ejs') %> 
