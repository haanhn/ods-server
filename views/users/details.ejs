<%- include('../includes/head.ejs') %>
<!-- Begin Page Content -->
<style>
	.table td {
		border-top: none;
	}
	.text-dark-medium {
		color: #111111;
	}
</style>
<div class="container-fluid">
	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">User</h1>

	<div class="row mt-5">
		<div class="col-md-12">
			<div class="card">
				<h4 class="pt-3 pl-3 text-dark">User Info</h4>
				<div class="card-body">
					<div class="row">
						<div class="col-lg-2">
							<img src="<%= user.avatar ? user.avatar : (user.gender === 'male' ? "/img/users/male.png" : "/img/users/female.png") %>" alt="Avatar user" style="width:280px; height:330px; border-radius: 10px;">
						</div>
						<div class="col-lg-6 ml-lg-5" >
							<h3 class="text-dark"><%= user.fullname %></h3>
							<p><%= user.bio %></p>
							<div class="info-table table-responsive">
								<table class="table text-nowrap">
									<tbody>
										<tr style="border: none;">
											<td>Tên:</td>
											<td class="font-medium text-dark-medium"><%= user.fullname %></td>
										</tr>
										<tr>
											<td>Giới tính:</td>
											<td class="font-medium text-dark-medium"><%= user.gender === 'male' ? "Nam" : ( user.gender == 'femal' ? "Nữ" : "Giới tính khác") %></td>
										</tr>
										<tr>
											<td>Ngày sinh:</td>
											<td class="font-medium text-dark-medium"><%= user.dateOfBirth === null ? "Chưa xác định" : user.dateOfBirth.getDate() + "-" + (user.dateOfBirth.getMonth() + 1) + "-" + user.dateOfBirth.getFullYear(); %></td>
										</tr>
										<tr>
											<td>Địa chỉ:</td>
											<td class="font-medium text-dark-medium"><%= user.address %></td>
										</tr>
										<tr>
											<td>Thành phố:</td>
											<td class="font-medium text-dark-medium"><%= user.region %></td>
										</tr>
										<tr>
											<td>E-mail:</td>
											<td class="font-medium text-dark-medium"><%= user.email %></td>
										</tr>
										<tr>
											<td>Chiến dịch đã tạo:</td>
											<td class="font-medium text-dark-medium">15</td>
										</tr>
										<tr>
											<td>Chiến dịch đã quyên góp:</td>
											<td class="font-medium text-dark-medium">50</td>
										</tr>
										<tr>
											<td>Tổng số tiền quyên góp:</td>
											<td class="font-medium text-dark-medium">20.000.000đ</td>
										</tr>
										<tr>
											<td>Điểm đánh giá:</td>
											<td class="font-medium text-dark-medium">8/10</td>
										</tr>
										<tr>
											<td>Role:</td>
											<td class="font-medium text-dark-medium"><%= user.role %></td>
										</tr>
										<tr>
											<td>Ngày tạo tài khoản:</td>
											<td class="font-medium text-dark-medium"><%= user.createdAt.getDate() + "-" + (user.createdAt.getMonth() + 1) + "-" + user.createdAt.getFullYear(); %></td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
						<div class="col-lg-3">
							<a href="/admin/users/campaigns/<%= user.id %>" class="btn btn-success">Xem chiến dịch đã tạo</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- /.container-fluid -->
<%- include('../includes/end.ejs') %>
