<%- include('../includes/head.ejs') %> 
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Campaign</h1>
        

        <div class="row mt-5">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <form action="/admin/categories/edit" method="POST">
                        <div class="card-body">
                            <h4 class="card-title">Edit campaign</h4>
                            <input type="hidden" id="campaignId" name="campaignId" value= "<%= campaign.id %>">
                            <input type="hidden" id="campaignSlug" name="campaignSlug" value= "<%= campaign.campaignSlug %>">
                            <div class="form-group row">
                                <label for="campaignTitle" class="col-sm-3 text-right control-label col-form-label">Campaign Title</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="campaignTitle" name="campaignTitle" value="<%= campaign.campaignTitle %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="campaignSlug" class="col-sm-3 text-right control-label col-form-label">Campaign slug</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="campaignSlug" name="campaignSlug" value="<%= campaign.campaignSlug %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="campaignGoal" class="col-sm-3 text-right control-label col-form-label">Campaign goal</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="campaignGoal" name="campaignGoal" value="<%= campaign.campaignGoal %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="campaignEndDate" class="col-sm-3 text-right control-label col-form-label">Campaign end date</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="campaignEndDate" name="campaignEndDate" value="<%= campaign.campaignEndDate %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="campaignRatingPoint" class="col-sm-3 text-right control-label col-form-label">Campaign rating point</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="campaignRatingPoint" name="campaignRatingPoint" value="<%= campaign.campaignRatingPoint %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="campaignShortDescription" class="col-sm-3 text-right control-label col-form-label">Campaign short description</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="campaignShortDescription" name="campaignShortDescription" value="<%= campaign.campaignShortDescription %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 text-right">Status</label>
                                <div class="col-sm-9">
                                    <div class="custom-control custom-checkbox mr-sm-2">
                                        <input type="checkbox" class="custom-control-input" id="status" name="status"  <%= campaign.status === 'enable' ? 'checked' : '' %> >
                                        <label class="custom-control-label" for="status"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary">Update campaign</button>
                                <a href="/admin/campaign" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
    <%- include('../includes/end.ejs') %> 
